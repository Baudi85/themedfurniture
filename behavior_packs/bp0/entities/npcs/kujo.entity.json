{
    "format_version": "1.16",
    "minecraft:entity": {
        "description": {
            "identifier": "custom:kujo",
            "is_spawnable": true,
            "is_summonable": true,
            "is_experimental": false,
            "scripts": {
                "animate": [
                    "custom:kujo_commands"
                ]
            },
            "animations": {
                "custom:kujo_commands": "controller.animation.custom_kujo"
            }
        },
        "components": {
            "minecraft:type_family": {
                "family": [
                    "custom",
                    "npc"
                ]
            },
            "minecraft:scale": {
                "value": 1
            },
            "minecraft:physics": {},
            "minecraft:collision_box": {
                "height": 2,
                "width": 1
            },
            "minecraft:pushable": {
                "is_pushable": false,
                "is_pushable_by_piston": false
            },
            "minecraft:damage_sensor": {
                "triggers": [
                    {
                        "cause": "all",
                        "deals_damage": false,
                        "on_damage": {
                            "event": "echo:main"
                        }
                    }
                ]
            },
            "minecraft:behavior.look_at_player": {
                "look_distance": 64,
                "priority": 0,
                "probability": 1,
                "look_time": [
                    64,
                    64
                ]
            },
            "minecraft:movement": {},
            "minecraft:trade_table": {
                "display_name": "entity.kujo.trade_table_name",
                "table": "trading/npcs/kujo.trading.json",
                "new_screen": true
            }
        },
        "component_groups": {
            "echo:main": {
                "minecraft:environment_sensor": {
                    "triggers": [
                        {
                            "filters": {
                                "all_of": [
                                    {
                                        "test": "distance_to_nearest_player",
                                        "operator": "<",
                                        "value": 3
                                    }
                                ]
                            },
                            "event": "echo:event_main"
                        }
                    ]
                }
            },
            "echo:main_2": {
                "minecraft:timer": {
                    "looping": false,
                    "time": 1,
                    "time_down_event": {
                        "event": "echo:event_main_2"
                    }
                }
            },
            "echo:waiting_for_new_player": {
                "minecraft:environment_sensor": {
                    "triggers": [
                        {
                            "filters": {
                                "all_of": [
                                    {
                                        "test": "has_tag",
                                        "value": "reset"
                                    }
                                ]
                            },
                            "event": "echo:event_waiting_for_new_player"
                        }
                    ]
                }
            },
            "echo:event_main": {
                "minecraft:skin_id": {
                    "value": 1
                }
            },
            "echo:event_main_2": {
                "minecraft:skin_id": {
                    "value": 2
                }
            },
            "echo:event_waiting_for_new_player": {
                "minecraft:skin_id": {
                    "value": 3
                }
            },
            "echo:execute_no_command": {
                "minecraft:skin_id": {
                    "value": 0
                }
            },
            "echo:despawn": {
                "minecraft:instant_despawn": {}
            }
        },
        "events": {
            "minecraft:entity_spawned": {
                "add": {
                    "component_groups": [
                        "echo:main"
                    ]
                }
            },
            "echo:clear": {
                "add": {
                    "component_groups": [
                        "echo:execute_no_command"
                    ]
                },
                "remove": {
                    "component_groups": [
                        "echo:main",
                        "echo:main_2",
                        "echo:waiting_for_new_player"
                    ]
                }
            },
            "echo:despawn": {
                "add": {
                    "component_groups": [
                        "echo:despawn"
                    ]
                }
            },
            "echo:main": {
                "add": {
                    "component_groups": [
                        "echo:main"
                    ]
                }
            },
            "echo:main_2": {
                "add": {
                    "component_groups": [
                        "echo:main_2"
                    ]
                }
            },
            "echo:waiting_for_new_player": {
                "add": {
                    "component_groups": [
                        "echo:waiting_for_new_player"
                    ]
                }
            },
            "echo:event_main": {
                "add": {
                    "component_groups": [
                        "echo:event_main"
                    ]
                }
            },
            "echo:event_main_2": {
                "add": {
                    "component_groups": [
                        "echo:event_main_2"
                    ]
                }
            },
            "echo:event_waiting_for_new_player": {
                "add": {
                    "component_groups": [
                        "echo:event_waiting_for_new_player"
                    ]
                }
            }
        }
    }
}