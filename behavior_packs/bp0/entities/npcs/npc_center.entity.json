                        "echo:main_5"
                    ]
                }
            },
            "echo:main_6": {
                "add": {
                    "component_groups": [
                        "echo:main_6"
                    ]
                }
            },
            "echo:event_main": {
                "add": {
                    "component_groups": [
                        "echo:event_main"
                    ]
                }
            },
            "echo:event_main_2": {
                "add": {
