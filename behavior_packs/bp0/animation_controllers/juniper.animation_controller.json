{
    "format_version": "1.10.0",
    "animation_controllers": {
        "controller.animation.custom_juniper": {
            "states": {
                "default": {
                    "transitions": [
                        {
                            "echo_event_main": "query.skin_id == 1"
                        },
                        {
                            "echo_event_main_2": "query.skin_id == 2"
                        },
                        {
                            "echo_event_main_3": "query.skin_id == 3"
                        },
                        {
                            "echo_event_main_4": "query.skin_id == 4"
                        },
                        {
                            "echo_event_main_5": "query.skin_id == 5"
                        },
                        {
                            "echo_event_main_6": "query.skin_id == 6"
                        }
                    ]
                },
                "echo_event_main": {
                    "transitions": [
                        {
                            "default": "query.skin_id != 1"
                        }
                    ],
                    "on_entry": [
                        "/playsound custom.speech.npc.notification @a ~ ~ ~",
                        "/title @a[x=1089,y=0,z=-1115,dx=12,dy=5,dz=16] times 20 200 20",
                        "@s echo:clear",
                        "@s echo:main_2"
                    ]
                },
                "echo_event_main_2": {
                    "transitions": [
                        {
                            "default": "query.skin_id != 2"
                        }
                    ],
                    "on_entry": [
                        "/playsound custom.speech.npc.juniper.hello_welcome @a ~ ~ ~",
                        "/title @a[r=8] actionbar §6Juniper:§f Hello, welcome to our store!",
                        "@s echo:clear",
                        "@s echo:main_3"
                    ]
                },
                "echo_event_main_3": {
                    "transitions": [
                        {
                            "default": "query.skin_id != 3"
                        }
                    ],
                    "on_entry": [
                        "/playsound custom.speech.npc.juniper.we_have_11 @a ~ ~ ~",
                        "/title @a[r=8] actionbar §6Juniper:§f We have 11 different categories of furniture and some outdoor decorations.",
                        "@s echo:clear",
                        "@s echo:main_4"
                    ]
                },
                "echo_event_main_4": {
                    "transitions": [
                        {
                            "default": "query.skin_id != 4"
                        }
                    ],
                    "on_entry": [
                        "/playsound custom.speech.npc.juniper.i_hope_you @a ~ ~ ~",
                        "/title @a[r=8] actionbar §6Juniper:§f I hope you find something you like!",
                        "@s echo:clear",
                        "@s echo:main_5"
                    ]
                },
                "echo_event_main_5": {
                    "transitions": [
                        {
                            "default": "query.skin_id != 5"
                        }
                    ],
                    "on_entry": [
                        "/title @a[r=8] actionbar §6Juniper:§f §b** psst, I heard some noise coming from the roof.- ",
                        "@s echo:clear",
                        "@s echo:main_6"
                    ]
                },
                "echo_event_main_6": {
                    "transitions": [
                        {
                            "default": "query.skin_id != 6"
                        }
                    ],
                    "on_entry": [
                        "/title @a[r=8] actionbar §6Juniper:§f §b - Do you think someone is sneaking around up there? ** ",
                        "@s echo:clear",
                        "@s echo:main"
                    ]
                }
            }
        }
    }
}